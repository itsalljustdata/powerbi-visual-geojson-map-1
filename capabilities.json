{
	"suppressDefaultTitle": true,
	"supportsHighlight": false,
	"objects": {
		"StateRoadSettings": {
			"displayName": "üòé IRIS Roads",
			"properties": {
				"show": {
					"displayName": "üëÅÔ∏è IRIS Roads",
					"type": {
						"bool": true
					}
				},
				"show_state_roads": {
					"displayName": "üëÅÔ∏è State Roads (and PSPs)",
					"type": {
						"bool": true
					}
				},
				"show_local_roads": {
					"displayName": "üëÅÔ∏è Local Roads",
					"type": {
						"bool": true
					}
				},
				"show_slk_ticks": {
					"displayName": "üëÅÔ∏è SLK Ticks",
					"type": {
						"bool": true
					}
				},
				"state_road_color": {
					"displayName": "State Roads",
					"type": {
						"fill": {
							"solid": {
								"color": true
							}
						}
					}
				},
				"psp_road_color": {
					"displayName": "PSPs",
					"type": {
						"fill": {
							"solid": {
								"color": true
							}
						}
					}
				},
				"local_road_color": {
					"displayName": "Local Roads",
					"type": {
						"fill": {
							"solid": {
								"color": true
							}
						}
					}
				}
			}
		},
		"OtherMapSettings":{
			"displayName": "üòé NickMap",
			"properties": {
				"background_layer": {
					"displayName": "Map Background Image",
					"type": {
						"enumeration": [
							{
								"displayName": "Metromap",
								"value": "Metromap"
							},
							{
								"displayName": "OSM",
								"value": "OSM"
							}
						]
					}
				}
			}
		}
	},
	"dataRoles": [
		{
			"displayName": "GeoJson Feature",
			"description": "Provide a single column of type text, where each row is a single valid GeoJSON Feature: {\"type\":\"Feature\", ...}. The CRS must be EPSG:4326 aka WGS84 (this is the only CRS permitted by the GeoJSON standard.)",
			"name": "geojson_field",
			"kind": "GroupingOrMeasure"
		},
		{
			"displayName": "Popup Info",
			"description": "When map features are clicked a popup will show the data in the following columns.",
			"name": "other_columns",
			"kind": "GroupingOrMeasure"
		},
		{
			"displayName": "Colour",
			"description": "Features will be coloured using this field. Any valid CSS colour string is accepted.",
			"name": "colour_column",
			"kind": "GroupingOrMeasure",
			"requiredTypes": [
				{
					"text": true
				}
			]
		},
		{
			"displayName": "Line Weight (px)",
			"description": "LineString features will use this line weight",
			"name": "line_weight_column",
			"kind": "GroupingOrMeasure",
			"requiredTypes": [
				{
					"numeric": true
				}
			]
		},
        {
            "displayName": "Point Diameter (px)",
			"description": "Point features will use point diameter",
			"name": "point_diameter_column",
			"kind": "GroupingOrMeasure",
			"requiredTypes": [
				{
					"numeric": true
				}
			]}
	],
	"dataViewMappings": [
		{
			"conditions": [
				{
					"geojson_field": {
						"max": 1,
						"min": 1
					},
					"colour_column": {
						"max": 1,
						"min": 0
					},
					"line_weight_column": {
						"max": 1,
						"min": 0
					},
					"point_diameter_column": {
						"max": 1,
						"min": 0
					}
				}
			],
			"table": {
				"rows": {
					"select": [
                        {
                            "for": {"in": "geojson_field"}
                        },
						{
							"for": {"in": "other_columns"}
						},
						{
							"for": {
								"in": "colour_column"
							}
						},
						{
							"for": {
								"in": "line_weight_column"
							}
						},
						{
							"for": {
								"in": "point_diameter_column"
							}
						}
					],
					"dataReductionAlgorithm": {
						"top": {
							"count": 30000
						}
					}
				}
			}
		}
	]
}