{
	"suppressDefaultTitle": true,
	"supportsHighlight": false,
	"objects": {
		"StateRoadSettings": {
			"displayName": "üòé IRIS Roads",
			"properties": {
				"show": {
					"displayName": "üëÅÔ∏è IRIS Roads",
					"type": {
						"bool": true
					}
				},
				"show_state_roads": {
					"displayName": "üëÅÔ∏è State Roads (and PSPs)",
					"type": {
						"bool": true
					}
				},
				"show_local_roads": {
					"displayName": "üëÅÔ∏è Local Roads",
					"type": {
						"bool": true
					}
				},
				"show_slk_ticks": {
					"displayName": "üëÅÔ∏è SLK Ticks",
					"type": {
						"bool": true
					}
				},
				"state_road_color": {
					"displayName": "State Roads",
					"type": {
						"fill": {
							"solid": {
								"color": true
							}
						}
					}
				},
				"psp_road_color": {
					"displayName": "PSPs",
					"type": {
						"fill": {
							"solid": {
								"color": true
							}
						}
					}
				},
				"local_road_color": {
					"displayName": "Local Roads",
					"type": {
						"fill": {
							"solid": {
								"color": true
							}
						}
					}
				}
			}
		},
		"OtherMapSettings":{
			"displayName": "üòé Background",
			"properties": {
				"background_layer": {
					"displayName": "Imagery Layer",
					"type": {
						"enumeration": [
							{
								"displayName": "Metromap",
								"value": "Metromap"
							},
							{
								"displayName": "OSM",
								"value": "OSM"
							}
						]
					}
				},
				"background_invert":{
					"displayName": "Invert (%)",
					"type": {"numeric": true}
				},
				"background_greyscale":{
					"displayName": "Greyscale (%)",
					"type": {"numeric": true}
				},
				"background_brightness":{
					"displayName": "Brightness (%)",
					"type": {"numeric": true}
				},
				"background_contrast":{
					"displayName": "Contrast (%)",
					"type": {"numeric": true}
				},
				"zoom_to_fit_on_update":{
					"displayName": "Auto zoom/fit on update",
					"description": "Enable this option to automatically zoom to fit selected data whenever the map updates.",
					"type": {"bool": true}
				}
			}
		}
	},
	"dataRoles": [
		{
			"displayName": "Road Number",
			"description": "Road number eg 'H001'",
			"name": "road_column",
			"kind": "Grouping"
		},
		{
			"displayName": "SLK From",
			"description": "SLK in km where the feature starts",
			"name": "slk_from_column",
			"kind": "Grouping"
		},
		{
			"displayName": "SLK To",
			"description": "SLK in km where the feature ends",
			"name": "slk_to_column",
			"kind": "Grouping"
		},
		{
			"displayName": "Offset",
			"description": "Offset",
			"name": "offset_column",
			"kind": "Grouping"
		},
		{
			"displayName": "Cwy",
			"description": "Cwy",
			"name": "cwy_column",
			"kind": "Grouping"
		},
		
		{
			"displayName": "Popup Info",
			"description": "When map features are clicked a popup will show the data in the following columns.",
			"name": "other_columns",
			"kind": "Grouping",
			"preferredTypes": [
				{
					"text": true
				}
			]
		},
		{
			"displayName": "Colour",
			"description": "Features will be coloured using this field. Any valid CSS colour string is accepted.",
			"name": "colour_column",
			"kind": "Grouping",
			"requiredTypes": [
				{
					"text": true
				}
			]
		},
		{
			"displayName": "Line Weight (px)",
			"description": "LineString features will use this line weight",
			"name": "line_weight_column",
			"kind": "Grouping",
			"requiredTypes": [
				{
					"numeric": true
				}
			]
		},
		{
			"displayName": "Point Diameter (px)",
			"description": "Point features will use point diameter",
			"name": "point_diameter_column",
			"kind": "Grouping",
			"requiredTypes": [
				{
					"numeric": true
				}
			]}
	],
	"dataViewMappings": [
		{
			"conditions": [
				{
					
					"colour_column": {
						"max": 1,
						"min": 0
					},
					"line_weight_column": {
						"max": 1,
						"min": 0
					},
					"point_diameter_column": {
						"max": 1,
						"min": 0
					}
				}
			],
			"categorical": {
				"categories": {
					"select": [
						{"bind": {"to": "road_column"}},
						{"bind": {"to": "slk_from_column"}},
						{"bind": {"to": "slk_to_column"}},
						{"bind": {"to": "offset_column"}},
						{"bind": {"to": "cwy_column"}},

						{"for":  {"in": "other_columns"}},
						{"bind": {"to": "colour_column"}},
						{"bind": {"to": "line_weight_column"}},
						{"bind": {"to": "point_diameter_column"}}
					],
					"dataReductionAlgorithm": {
						"top": {"count": 30000}
					}
				}
			}
		}
	]
}